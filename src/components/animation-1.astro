  <style>
    .overlay {
      position: absolute;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.8); /* Adjust the color and transparency as needed */
    }

    .animated-footer {
      position: absolute;
      width: 100%;
      /* height: 250px; */
      overflow: hidden;
    }

    .city-background {
      position: absolute;
      width: 100%;
      height: 100%;
      background: url("../assets/img/landscape.webp") repeat-x;
      background-size: cover;
      background-position: center;
      animation: scrollBackground 40s linear infinite;
    }

    @keyframes scrollBackground {
      0% {
        background-position: 0 0;
      }
      100% {
        background-position: -10000px 0;
      }
    }

    .plane {
      position: absolute;
      width: 100px; /* Adjust as needed */
      height: 50px; /* Adjust as needed */
      background: url("../assets/img/plane.png") no-repeat;
      background-size: contain;
      animation: flyPlane 10s linear infinite;
    }

    @keyframes flyPlane {
      0% {
        left: 105px; /* Fly off the right edge */
        top: 20%; /* Adjust as needed */
      }
      50% {
        left: 95px; /* Fly off the right edge */
        top: 30%; /* Adjust as needed */
      }
      100% {
        left: 105px; /* Fly off the right edge */
        top: 20%; /* Adjust as needed */
      }
    }
  </style>

