  <link rel="stylesheet" href="../../src/styles/flaticon.css" />
  <link rel="stylesheet" href="../../src/styles/fontawesome.min.css" />
  <link rel="stylesheet" href="../../src/styles/global.css" />
  <link rel="stylesheet" href="../../src/styles/magnific-popup.css" />
  <link rel="stylesheet" href="../../src/styles/main.css" />
  <link rel="stylesheet" href="../../src/styles/meanmenu.css" />
  <link rel="stylesheet" href="../../src/styles/nice-select.css" />
  <link rel="stylesheet" href="../../src/styles/owl.carousel.min.css" />
  <link rel="stylesheet" href="../../src/styles/owl.video.play.png" />
